    <script type="text/javascript">
        function displaySecondDoseInput(choice){
            if(choice.value == 1){
                document.getElementById('hidefirstDose').style.display = "block";
                document.getElementById('hidesecondDose').style.display = "none";

            }
            else if(choice.value == 2){
                document.getElementById('hidefirstDose').style.display = "none";
                document.getElementById('hidesecondDose').style.display = "block";

            }
          }
    </script>
