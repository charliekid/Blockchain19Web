                <!--                This is for if there is a first dose present it will auto fill for the clinic admin-->
                {{#if firstDate}}
                    <div id="hidefirstDose">
                        <div class="form-group">
                            <p>Format Required: yyyy-MM-dd</p> <br>
                            <input type="text" name="dateOne" class="form-control" placeholder="{{firstDate}}" value="{{firstDate}}"  required/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="lotNumberOne" class="form-control" placeholder="{{firstLot}}" value="{{firstLot}}" required/>
                        </div>
                    </div>
                    <div id="hidesecondDose" style="display:none">
                        <div class="form-group">
                            <p>Format Required: yyyy-MM-dd</p>
                            <input type="text" name="dateTwo" class="form-control" placeholder="Vaccine 2 Date *" value="" required/>
                        </div>
                        <div class="form-group">
                            <input type="text" name="lotNumberTwo" class="form-control" placeholder="Vaccine 2 Lot # *" value="" required/>
                        </div>
                    </div>

                {{else}}
